<h2>Much Wow</h2>
<div class='controls'>
  <button {{action 'clickPrev'}}> Previous </button>
  <button {{action 'clickNext'}}> Next </button>
</div>
<div class='container'>
  {{#each model as |movies|}}
    <div class='movie'>
      {{movies.title}}
      <br>
      {{movie-selected movie=movies addToQueue=(action 'addMovie')}}
    </div>
  {{/each}}
</div>
<div class='controls'>
  <button {{action 'clickPrev'}}> Previous </button>
  <button {{action 'clickNext'}}> Next </button>
</div>

<aside>
  <h2>Queue</h2>
  {{#each queue as |movie|}}
    <div class="movie-queue">
      <p class="queue-title">{{movie.title}}</p>
      <img class="thumb" src="http://localhost:3000/images/posters/{{movie.posterFilename}}">
      <br><button class="remove-queue" {{action 'removeMovie' movie}}>‚ùå</button>
    </div>
  {{/each}}
</aside>