<div class="queue-menu">
{{#bs-accordion}}
  {{#bs-accordion-item value="1" title="your queue"}}
    {{#each queue as |movie|}}
      <img src="http://localhost:3000/images/posters/{{movie}}">
    {{/each}}     
  {{/bs-accordion-item}}
{{/bs-accordion}} 
</div>


<div id="movie-container" class="col-md-10">
  {{#each model as |movie|}}
    <div class="poster">
      <div class="box">
        <a class="button" href="#popup1" {{action "selectMovie" movie.title movie.overview}}><img src="http://localhost:3000/images/posters/{{movie.poster_filename}}"></a></div><br>
        <div id="popup1" class="overlay">
          <div class="popup">
            <h2>{{displayTitle}}</h2>
            <a class="close" href="#" {{action "closeMovie"}}>&times;</a>
            <div class="content">
              {{displayOverview}}
            </div>
          </div>
         </div>          
    <div class="queue-button"><button class="queue" {{action "addMovie" movie.poster_filename}} onclick="toggle_visibility('added')">Add to Queue</button>
    </div>
  </div> 
  {{/each}}
</div>

<button class="prev" {{action "prevPage"}}>Previous</button>
<button class="next" {{action "nextPage"}}>Next</button>