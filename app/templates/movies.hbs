<div id="movie-container" class="col-md-10">
  {{#each model as |movie|}}
    <div class="poster">
      <div class="box">
        <a class="button" href="#popup1" {{action "selectMovie" movie.title movie.overview}}><img src="http://localhost:3000/images/posters/{{movie.poster_filename}}"></a></div><br>
        <div id="popup1" class="overlay">
          <div class="popup">
            <h2>{{displayTitle}}</h2>
            <a class="close" href="#" {{action "closeMovie"}}>&times;</a>
            <div class="content">
              {{displayOverview}}
            </div>
          </div>
         </div>          
    <div class="queue-button"><button class="queue">Add to Queue</button></div>
  </div> 
  {{/each}}
</div>

<button class="prev" {{action "prevPage"}}>Previous</button>
<button class="next" {{action "nextPage"}}>Next</button>