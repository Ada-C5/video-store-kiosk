{{outlet}}
<div class="queue">
  <div class= "container">
    <div class="row">
      <div class= "col-lg-12">
      {{#if queueArray}}
        <h2>Queue</h2>
        <button {{action "clearQueue"}}>Clear Queue</button>
      {{/if}}
      {{#each queueArray as |movie|}}
        <div class= "col-md-2">
          <img class="thumbnail" src="http://localhost:3000/images/posters/{{movie.poster_filename}}">
          <button {{action "removeMovie" movie}}>Remove</button>
        </div>
      {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class= "col-lg-12">
    <h2>Movies</h2>
      {{#each model as |movie|}}
        <div class= "col-md-4">
          <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
            <div class="flipper">
              <div class="front">
                <img class="thumbnail" src="http://localhost:3000/images/posters/{{movie.poster_filename}}">
              </div>
              <div class="back">
                <p class= "title"><b>{{movie.title}}</b></p>
                <p class= "overview"><b>Synopsis:</b> <br>{{movie.overview}}</p>
                <p class= "date"><b>Released: </b>{{movie.year}}</p>
                <button {{action "addMovie" movie}}>Add to Queue</button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<div class="buttons">
<button {{action "previousPage"}}> Previous </button>
<button {{action "nextPage"}}> Next </button>
</div>