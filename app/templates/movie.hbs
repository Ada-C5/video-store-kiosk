<h2>Movies</h2>

<div class="movie-list">
<table>
    {{#each model as |movie|}}
      <div class="poster" onmouseover={{action 'showDescription' movie.id}}
      onmouseout={{action 'noDescription' movie.id}}>
        {{#link-to "show" movie.title}}
          <p class="title">{{movie.title}}</p>
          {{#if movie.selected}}
            <p class="description">{{movie.overview}}</p>
          {{/if}}
          <img
          src='http://localhost:3000/images/posters/{{movie.poster_filename}}'>
        {{/link-to}}
      </div>
    {{/each}}
</table>
</div>

<button id="previous" {{action "previousPage"}}>Previous</button>
<button id="next" {{action "nextPage"}}>Next</button>
